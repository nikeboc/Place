<% provide(:title, 'プロフィール情報更新') %>
<div class="row">
<div class="blank"></div>
<h1 class="display-5 fw-bolder">プロフィール情報更新</h1>
<div class="borderbtm"></div>
<div class="blank"></div>
<div class="col-5 box">
    <%= form_with(model: @user, local: true) do |f| %>
     <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "アカウント名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :content, "あなたの詳細情報"%>
  　　 <div class="field">
    　 <%= f.text_area :content, placeholder: "あなたの詳細な情報を自由に記入してください（1000文字以内）", class: "form-control",size: "50x10"%>
  　　 </div>

  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </span>
      <div class= "centerbtn">
      <%= f.submit "更新する", class: "btn btn-outline-danger" %>
      </div>
    <% end %>
    </div>
    </div>