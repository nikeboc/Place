<!-- Home ログアウト時-->
<header class="bg-dark py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">Place</h1>
      <% if logged_in? %>
      <p class="lead fw-normal text-white-50 mb-0"></p>
      <% else %>
      <p class="lead fw-normal text-white-50 mb-0">サインインして場所を探す、あなたの場所を提供することができます</p>
      <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-success" %>
      <% end %>
    </div>
  </div>
</header>

<h2>Place一覧</h2>
<div class="border"></div>
<div class="row">
<% if @posts.any? %>
  <section class="py-5">
      <div class="container px-4 px-lg-5 mt-5">
          <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
          <%= render @posts %>
          </div>
      </div>
  </section>
  <% else %>
  <h2 class="m-5 text-center">まだPlaceがありません</h2>
        <div class="blankbtm"></div>

  <% end %>
</div>
        
