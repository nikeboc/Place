<!-- Post -->
<div class="col mb-5">
    <div class="card h-20">
        <!-- Place image-->
        <%= image_tag post.display_image,class: "img-fluid rounded" %>
        <!-- Place details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Place title-->
                <h5 class="fw-bolder"><%= post.title %></h5>
                <!-- Place price-->
                <%= post.price %>
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><%= link_to "詳細", post, class: "btn btn-outline-dark mt-auto" %></div>
        </div>
    </div>
</div>　

                    