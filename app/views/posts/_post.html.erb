<!-- Post -->
<div class="col-5 mb-5">
<%= link_to(post, class: '') do %>
    <div class="card h-20">
        <%= image_tag post.home_image, class: "rounded mx-auto d-block p-2" %>
        <div class="card-body p-2">
            <div class="text-center">
              <h5 class="fw-bolder"><%= truncate((post.title), length: 5) %></h5>
            </div>
            <div class="text-center m-1">
              <%= truncate((post.location), length: 4) %>
            </div>
            <div class="text-center m-1">
              <%= truncate(("#{post.price}円/日"), length: 12) %>
            </div>
            <div class="text-center m-2">
              <i class="fas fa-star"></i>
              <%= "#{post.favorited_users.count}"%>
            </div>
        </div>
    </div>
<% end %>
</div>

