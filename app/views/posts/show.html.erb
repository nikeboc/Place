<% provide(:title, @post.title) %>
<div class="row">
<div class="col-lg-6">
<h2><%= @post.title %></h2>
<div class="border m-2"></div>
<%= image_tag @post.display_image, class: "img-fluid rounded mx-auto d-block" %>
<div class="blank border"></div>
<h5 class="p-1"><%= "・所在地:#{@post.location}" %></h5>
<h5 class="p-1"><%= "・価格:#{@post.price}円/日" %></h5>
<h5 class="p-1"><%= "・ユーザー:#{@post.user.name}さん" %></h5>
<h5 class="p-1"><%= "・連絡先:#{@post.user.email}" %></h5>
<div class="text-center">
<% if current_user.already_favorited?(@post) %>
 <div class="p-1">
  <%= link_to "お気に入りを取り消す", post_favorite_path(@post), method: :delete, class: "btn btn-outline-info left" %>
  <p class="m-2">「<%= @post.favorites.count %>人がお気に入り」</p>
 </div>
<% else %>
<div class="p-1">
  <%= link_to 'お気に入り登録', post_favorites_path(@post), method: :post, class: "btn btn-outline-info left" %>
  <p class="m-2">「<%= @post.favorites.count %>人がお気に入り」</p>
  </div>
<% end %>
</div>
</div>

<div class="col-lg-6">
<div class="details">
<h3 class="p-1">ー詳細情報ー</h3>
</div>
<div class="border m-1"></div>
<p class="p-2"><%= @post.content %></p>

</div>
</div>

<div class="blank"></div>
<% if current_user?(@post.user) %>
<div class="centerbtn p-5">
<%= link_to "Placeを削除", @post, method: :delete, data: { confirm: "Placeを削除しますか?" }, class: "btn btn-outline-danger" %>
</div>
<% end %>

