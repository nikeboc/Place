<% provide(:title, @post.title) %>
<div class="row">
<div class="col-lg-6">
<div class="details">
<h3 class=""><%= @post.title %></h3>
</div>
<div class="border m-1"></div>
<%= image_tag @post.display_image, class: "img-fluid rounded mx-auto d-block" %>
<div class="blank border"></div>
<% if current_user.already_favorited?(@post) %>
 <div class="p-1">
  <%= link_to "", post_favorite_path(@post), method: :delete, class: "fas fa-star left" %>
  <p >「<%= @post.favorites.count %>人がお気に入り」</p>
 </div>
<% else %>
<div class="p-1">
  <%= link_to '', post_favorites_path(@post), method: :post, class: "far fa-star left" %>
  <p >「<%= @post.favorites.count %>人がお気に入り」</p>
  </div>
<% end %>
<h5 class="p-1"><%= "・所在地:#{@post.location}" %></h5>
<h5 class="p-1"><%= "・価格:#{@post.price}円/日" %></h5>
<h5 class="p-1"><%= "・ユーザー:#{@post.user.name}さん" %></h5>
<h5 class="p-1"><%= "・連絡先:#{@post.user.email}" %></h5>
</div>

<div class="col-lg-6">
<div class="details">
<h3>ー  詳細情報  ー</h3>
</div>
<div class="border m-1"></div>
<p class="p-2"><%= @post.content %></p>
<div class="border m-1"></div>
<% if current_user?(@post.user) %>
<div class="centerbtn p-5">
<%= link_to "Placeを削除", @post, method: :delete, data: { confirm: "Placeを削除しますか?" }, class: "btn btn-outline-danger" %>
<%= link_to "Placeを編集", edit_post_path(@post), class: "btn btn-outline-success" %>
</div>
<% end %>
</div>
</div>
<div class="blank"></div>


